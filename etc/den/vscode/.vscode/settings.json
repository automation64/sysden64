//
// Settings Template Version: 27FEB24
// VSCode Version: >= 1.66
//
// Static settings section. Use to keep read-only settings that will only be modified when updating from the master template.
//
{
  "debug.console.fontSize": 11,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorStyle": "block",
  "editor.cursorSurroundingLines": 1,
  "editor.fontSize": 11,
  "editor.linkedEditing": true,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.parameterHints.cycle": true,
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "none",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.renderWhitespace": "boundary",
  "editor.showFoldingControls": "always",
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.enableDragAndDrop": false,
  "files.enableTrash": true,
  "search.followSymlinks": false,
  "search.useIgnoreFiles": true,
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.fontSize": 11,
  "window.closeWhenEmpty": false,
  "window.zoomLevel": 0,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tips.enabled": false,
  //
  // Local defaults section. Use to isolate settings that should not be replaced when updating from the master template
  //
  "debug.console.fontFamily": "'MesloLGS NF'",
  "terminal.integrated.fontFamily": "'MesloLGS NF'",
  "editor.fontFamily": "'MesloLGS NF'",
  "editor.inlayHints.fontFamily": "'MesloLGS NF'",
  //
  // Runtime section. Use this section to isolate local changes made automatically by VSCode
  //
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
