      "$vault" &&
      bl64_fs_create_symlink \
        "$vault" \
        "$target" ||
      return $?
    target="$vault"
  fi
  [[ -f "${target}/config" ]] &&
    bl64_msg_show_warning 'already configured. No further action taken' &&
