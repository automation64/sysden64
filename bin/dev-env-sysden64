#
# Globals
#
# * Use .env file to override values
#

# shellcheck disable=2154
{
    # Env / SysDen64 / Registry for lab and testing containers
    export DEV_ENV_SYSDEN64_REGISTRY="${DEV_ENV_SYSDEN64_REGISTRY:-ghcr.io/automation64}"
    # Lab / SysDen64 / Default image
    export DEV_LAB_SYSDEN64_CONTAINER="${DEV_LAB_SYSDEN64_CONTAINER:-toolbox/oraclelinux-9-toolbox-gitops}"
    # Lab / SysDen64 / Current profile name
    export DEV_LAB_SYSDEN64_PROFILE='.sysden64-profile'
    # Lab / SysDen64 / Profile paths
    export DEV_LAB_SYSDEN64_BASE_ENVS='.env.d'
    export DEV_LAB_SYSDEN64_PATH_DEN="${DEV_PATH_PROF_VAR}/home"
    export DEV_LAB_SYSDEN64_PATH_ENVS="${DEV_LAB_SYSDEN64_PATH_DEN}/${DEV_LAB_SYSDEN64_BASE_ENVS}"
    # Lab / SysDen64 / Container paths
    export DEV_LAB_SYSDEN64_PATH_ROOT_CONTAINER="${DEV_LAB_SYSDEN64_PATH_ROOT_CONTAINER:-/sysden64}"
    # Lab / SysDen64 / Application configuration boilerplates
    export DEV_LAB_SYSDEN64_PATH_MODEL="${DEV_PATH_ROOT}/etc/den"
    # Lab / SysDen64 / Helper scripts
    export DEV_LAB_SYSDEN64_SCRIPT_HOME="${DEV_PATH_BIN}/dev-lib-sysden64-home"
    export DEV_LAB_SYSDEN64_SCRIPT_ENTRYPOINT="${DEV_LAB_SYSDEN64_PATH_ROOT_CONTAINER}/bin/dev-lab-sysden64-entrypoint"
    # Lab / SysDen64 / Container user shell
    export DEV_LAB_SYSDEN64_CONTAINER_SHELL="${DEV_LAB_SYSDEN64_CONTAINER_SHELL:-/bin/zsh}"
    # Lib / SysDen64 / Replace existing configuration on new lab startup? (ON|OFF)
    export DEV_LIB_SYSDEN64_REPLACE_ENABLED="${DEV_LIB_SYSDEN64_REPLACE_ENABLED:-OFF}"
    # Lib / SysDen64 / Configuration files Watermark
    export DEV_LIB_SYSDEN64_WATERMARK='# Warning: configuration file generated by SysDen64. DO NOT MODIFY'
    # Lib / SysDen64 / GIT repositories
    export DEV_LIB_SYSDEN64_GIT_OMZ='https://github.com/ohmyzsh/ohmyzsh.git'
    export DEV_LIB_SYSDEN64_GIT_ZSH_PLUGINS=''
    DEV_LIB_SYSDEN64_GIT_ZSH_PLUGINS+=' https://github.com/marlonrichert/zsh-autocomplete.git'
    DEV_LIB_SYSDEN64_GIT_ZSH_PLUGINS+=' https://github.com/zsh-users/zsh-autosuggestions.git'
    DEV_LIB_SYSDEN64_GIT_ZSH_PLUGINS+=' https://github.com/zsh-users/zsh-syntax-highlighting.git'
    DEV_LIB_SYSDEN64_GIT_ZSH_PLUGINS+=' https://github.com/zsh-users/zsh-completions.git'
    DEV_LIB_SYSDEN64_GIT_ZSH_PLUGINS+=' https://github.com/Aloxaf/fzf-tab.git'
    DEV_LIB_SYSDEN64_GIT_ZSH_PLUGINS+=' https://github.com/joshskidmore/zsh-fzf-history-search.git'
    export DEV_LIB_SYSDEN64_GIT_ZSH_THEMES=''
    DEV_LIB_SYSDEN64_GIT_ZSH_THEMES+=' https://github.com/romkatv/powerlevel10k.git'
    export DEV_LIB_SYSDEN64_GIT_TMUX_PLUGINS=''
    DEV_LIB_SYSDEN64_GIT_TMUX_PLUGINS+=' https://github.com/tmux-plugins/tpm.git'
}

#
# Locals
#
# * Use .local file or CICD variables to override values
#

# shellcheck disable=2154
{
    # Lab / SysDen64 / Container user
    export DEV_LAB_SYSDEN64_CONTAINER_USER_CREATE="${DEV_LAB_SYSDEN64_CONTAINER_USER_CREATE:-YES}"
    export DEV_LAB_SYSDEN64_CONTAINER_USER_NAME="${DEV_LAB_SYSDEN64_CONTAINER_USER_NAME:-${USER}}"
    export DEV_LAB_SYSDEN64_CONTAINER_USER_UID="${DEV_LAB_SYSDEN64_CONTAINER_USER_UID:-${UID}}"
}

#
# Secrets
#
# * Use .secrets file or CICD secrets to override values
#
